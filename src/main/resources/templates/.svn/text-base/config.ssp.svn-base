<%@ val swotId:String %>
<%@ val cities:List[Tuple2[String,String]] %>
<%@ val host:String %>
<%@ val port:String %>
<html>
<head>
  <title>Config Widget</title>
</head>
<body>
<h3>Please indicate your home city</h3>

<form method="POST" action="http://${host}:${port}/grouponswot/location/save" id="configform">
<input type="hidden" name="swotId" value=${swotId} form="configform" />
<select name="location" form="configform"> 
#for (city <- cities)
<option value=${city._1}>${city._2}</option>
#end
</select>
<input type="submit" value="Set Location"/>
</form>

</body>
</html>